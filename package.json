<?php
header('Content-Type: application/json');

// Configurazione del database
$host = 'localhost';
$dbname = 'nome_database';
$user = 'nome_utente';
$password = 'password';

// Connessione al database
try {
    $pdo = new PDO("mysql:host=$host;dbname=$dbname;charset=utf8", $user, $password);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (PDOException $e) {
    echo json_encode(['error' => 'Connessione al database fallita: ' . $e->getMessage()]);
    exit;
}

// Metodo HTTP
$method = $_SERVER['REQUEST_METHOD'];

if ($method === 'POST') {
    if (isset($_POST['delete']) && $_POST['delete'] === 'true') {
        // Elimina una poesia
        $nome = $_POST['nome'] ?? '';
        $poesia = $_POST['poesia'] ?? '';

        $stmt = $pdo->prepare("DELETE FROM poesie WHERE nome = :nome AND poesia = :poesia LIMIT 1");
        $stmt->bindParam(':nome', $nome);
        $stmt->bindParam(':poesia', $poesia);

        if ($stmt->execute()) {
            echo json_encode(['message' => 'Poesia eliminata con successo.']);
        } else {
            echo json_encode(['error' => 'Errore durante l\'eliminazione della poesia.']);
        }
    } else {
        // Aggiungi una nuova poesia
        $nome = $_POST['nome'] ?? '';
        $poesia = $_POST['poesia'] ?? '';

        if (!empty($nome) && !empty($poesia)) {
            $stmt = $pdo->prepare("INSERT INTO poesie (nome, poesia) VALUES (:nome, :poesia)");
            $stmt->bindParam(':nome', $nome);
            $stmt->bindParam(':poesia', $poesia);

            if ($stmt->execute()) {
                echo json_encode(['message' => 'Poesia inviata con successo.']);
            } else {
                echo json_encode(['error' => 'Errore durante l\'invio della poesia.']);
            }
        } else {
            echo json_encode(['error' => 'Nome e poesia sono obbligatori.']);
        }
    }
} elseif ($method === 'GET') {
    // Recupera tutte le poesie
    $stmt = $pdo->query("SELECT nome, poesia FROM poesie ORDER BY created_at DESC");
    $poesie = $stmt->fetchAll(PDO::FETCH_ASSOC);
    echo json_encode($poesie);
} else {
    echo json_encode(['error' => 'Metodo non supportato.']);
}
